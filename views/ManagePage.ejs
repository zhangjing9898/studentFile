    //显示修改档案
    function showMoadl(idname) {
        console.log("显示" + idname);
        $.get("/showModal", {
            "modalId": idname
        }, function (result) {
            console.log("123" + result);
            iterator(0);
            //迭代器
            //这里防止ajax异步，必须使用迭代器
            function iterator(i) {
                if (i == result.length) {
                    //在这里书写请求完毕之后做的事情
                    return;  //不用继续迭代了
                }
                console.log(result[i]);
                //组装模板
                var modalString = compiledModal(result[i]);
                //添加DOM
                $("#myModalBody").html($(modalString));
                iterator(i + 1);
            }
        })
    }


